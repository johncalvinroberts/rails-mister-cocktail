<div class="wrapper">
  <div class="container">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path @cocktail.photo.path%>);">
      <div class="card-description">
        <h2><%= @cocktail.name %></h2>
      </div>
    </div>
    <h2 class="page-header">instructions</h2>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <p><%= @cocktail.description %></p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <ul>
      <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %><br> <%= dose.description %> <%= link_to "<i class='fa fa-trash-o' aria-hidden='true'></i>".html_safe, dose_path(dose), method: :delete %></li>
      <% end %>
     </ul>
    <%= link_to "add ingredients", new_cocktail_dose_path(@cocktail), class:"btn btn-default text-center" %>
    </div>
  </div>


  </div>
</div>
