<% @cocktails.each do |cocktail| %>
<div class="col-xs-12 col-sm-4">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path ("marmot.jpg") %>);">
    <div class="card-description">
     <h2> <%=cocktail.name.capitalize%></h2>
     <p></p>
   </div>
   <%= link_to "",cocktail_path(cocktail), class:"card-link" %>
  </div>
</div>
<% end %>

